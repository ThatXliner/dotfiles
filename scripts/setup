#!/usr/bin/env bash
# 1. Setup antidote
# 2. Setup P10k
# 4. Setup asdf
# 5. Setup brew

install_antidote() {
    git clone --depth=1 https://github.com/mattmc3/antidote.git ${ZDOTDIR:-$HOME}/.antidote
}
